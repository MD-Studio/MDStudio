{
  "$schema": "http://json-schema.org/schema#",
  "title": "EventRequest",
  "type": "object",
  "properties": {
    "level": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error",
            "critical"
          ],
          "default": "info"
        },
        "comparison": {
          "type": "string",
          "enum": [
            "eq",
            "gt",
            "lt",
            "gte",
            "lte"
          ],
          "default": "gte"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "object",
      "properties": {
        "value": {
          "type": "array",
          "items": {
            "type": "string",
            "not": {
              "enum": ["logs"]
            }
          }
        },
        "match": {
          "type": "string",
          "enum": ["all", "exact", "any"]
        }
      }
    },
    "source": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string"
        },
        "options": {
          "type": "string"
        }       
      },
      "required": [
        "pattern"
      ],
      "additionalProperties": false
    },
    "time": {
      "type": "object",
      "properties": {
          "until": {
            "type": "string",
            "format": "date-time"
          },
          "since": {
            "type": "string",
            "format": "date-time"
          }
      },
      "additionalProperties": false
    },
    "createdAt": {
      "type": "object",
      "properties": {
        "until": {
          "type": "string",
          "format": "date-time"
        },
        "since": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}