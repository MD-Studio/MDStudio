{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://mdstudio/schemas/make3d_request.json",
    "description":"create a guess 3D representation of a molecule",
    "type": "object",
    "properties": {
	"from_file": {
	    "type": "boolean",
	    "description": "Read molecule from file",
	    "default": "true"
	},
        "toolkit": {
            "type": "string",
            "description": "Default cheminformatics toolkit to use",
            "default": "pybel"
        },
        "mol": {
            "type": "string",
            "description": "Moleculare file"
        },
        "input_format": {
            "type": "string",
            "description": "Structure input file format"
        },
        "output_format": {
            "type": "string",
            "description": "Structure output file format"
        },
        "forcefield": {
            "type": "string",
            "description": "Forcefield for small ligand optimization",
            "default": "mmff94"
        },
        "steps": {
            "type": "integer",
            "description": "Number of steps for optimization",
            "default": 50
        },
        "localopt": {
            "type": "boolean",
            "description": "Perform local optimization of the structure",
            "default": true
        },
	"workdir": {
	    "type": "string",
	    "default": "."
	}
    },
    "required": ["mol", "input_format", "output_format"]
}
