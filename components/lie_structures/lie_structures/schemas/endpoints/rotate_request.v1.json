{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://liestudio/schemas/structures_schema.json",
    "title": "Convert molecule input",
    "description": "Convert molecule representation",
    "type": "object",
    "properties": {
	"rotations": {
	    "type": "array",
	    "descriptions": "Rotation Matrix"
	},
	"from_file": {
	    "type": "boolean",
	    "description": "Read molecule from file",
	    "default": "true"
	},
        "toolkit": {
            "type": "string",
            "description": "Default cheminformatics toolkit to use",
            "default": "pybel"
        },
        "mol": {
            "type": "string",
            "description": "Moleculare file"
        },
        "input_format": {
            "type": "string",
            "description": "Structure input file format"
        },
	"workdir": {
	    "type": "string",
	    "default": "."
	}
    },
    "required": ["mol", "input_format", "rotations"]
}
